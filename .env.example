# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================

# ============================================
# Application Configuration
# ============================================
# Node environment: development, production, or test
NODE_ENV=development

# Application URL (used for redirects, CORS, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# API Configuration
# ============================================
# Backend API URL (use /api for Next.js API routes, or external API URL)
NEXT_PUBLIC_API_URL=/api

# Internal API URL (for server-side requests, optional)
# API_URL=http://localhost:8000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/dbname

# MySQL
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=password
# MYSQL_DATABASE=dbname

# ============================================
# Authentication & Security
# ============================================
# JWT Secret (generate a strong random string)
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration (in seconds, e.g., 3600 = 1 hour)
JWT_EXPIRES_IN=120
# JWT Refresh Token Expiration (in seconds, e.g., 600 = 10 minutes)
JWT_REFRESH_EXPIRES_IN=600

# Refresh Token Secret
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this

# Password encryption salt rounds (for bcrypt)
BCRYPT_SALT_ROUNDS=10

# Session Secret (for cookie-based sessions)
SESSION_SECRET=your-session-secret-change-this-in-production

# ============================================
# OAuth Providers (Optional)
# ============================================
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP Configuration for sending emails
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourapp.com

# ============================================
# File Upload & Storage (Optional)
# ============================================
# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ============================================
# Third-Party Services (Optional)
# ============================================
# Redis (for caching/sessions)
# REDIS_URL=redis://localhost:6379

# Stripe (for payments)
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ============================================
# Development & Debugging
# ============================================
# Enable debug logging
# DEBUG=true

# Log level: error, warn, info, debug
# LOG_LEVEL=info

SMTP_HOST=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=